<% content_for :body_content_left, render(:partial => 'recent_posts') %>


<% content_for :body_content_right do %>
    <h1 class="single-thumbnail-title post-title-color gdl-title">
      <%= @item.title %>
    </h1>
    <div class="single-thumbnail-info post-info-color gdl-divider">
      <div class="single-thumbnail-date"><%= t('.published') %> <%= l(@item.publish_date, :format => :long) %></div>
      <div class="clear"></div>
    </div>

    <div class="clear"></div>
    <div class="single-content">
      <%= @item.body.html_safe %>

      <% if @item.source.present? %>
          <p align="right">
            <small><%= t('.source') %> <%= @item.source %></small>
          </p>
      <% end %>


      <p><br/>
        <%= link_to t('.back_to_index'), refinery.news_items_path %>
      </p>
    </div>



    <div class="clear"></div>



<% end %>


<%= render :partial => "/refinery/news/shared/show_layout" %>
